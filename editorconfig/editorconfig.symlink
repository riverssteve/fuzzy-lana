# http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.py]
max_line_length = 120

[*.sh]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[*.yaml,*,yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.toml]
indent_size = 2
